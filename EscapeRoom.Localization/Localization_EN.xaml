    <sys:String x:Key="Delete">Delete</sys:String>
    <sys:String x:Key="Remove">Remove</sys:String>
    <sys:String x:Key="Deleting...">Deleting...</sys:String>
    <sys:String x:Key="Removing...">Removing...</sys:String>

    <sys:String x:Key="UnhandledException_Title">An error has occured!</sys:String>
    <sys:String x:Key="UnhandledException_Ignore">Continue anyway</sys:String>
    <sys:String x:Key="UnhandledException_Crash">Crash application</sys:String>

    <!-- Question control -->
    <sys:String x:Key="QuestionControl_Title">Title</sys:String>
    <sys:String x:Key="QuestionControl_Description">Description</sys:String>
    <sys:String x:Key="QuestionControl_Type">Type</sys:String>

    <!-- Controller -->
    <sys:String x:Key="Controller_QuestionList">Questions:</sys:String>
    <sys:String x:Key="Controller_Settings">Settings</sys:String>

    <sys:String x:Key="Controller_NewQuestion">New question</sys:String>
    <sys:String x:Key="Controller_DuplicateLast">Duplicate last question</sys:String>
    <sys:String x:Key="Controller_NoDupeLeft">No question left to delete!</sys:String>
    <!-- game settings? -->
    <sys:String x:Key="Controller_MetaSettings">Game configuration</sys:String>
    <sys:String x:Key="Controller_TestID">Test ID</sys:String>
    <sys:String x:Key="Controller_StartGame">Start game</sys:String>
    <sys:String x:Key="Controller_ShiftDelete_formatted">Items are deleted *immediately* while holding _Shift_!</sys:String>

    <sys:String x:Key="Controller_QuickTips1_Title">How to create a question?</sys:String>
    <sys:String x:Key="Controller_QuickTips1_Description_formatted">Click on ~New question~, give it a title, a description and a solution, then click ~Create~.</sys:String>
    
    <sys:String x:Key="Controller_QuickTips2_Title">How to modify a question?</sys:String>
    <sys:String x:Key="Controller_QuickTips2_Description_formatted">Click anywhere on a question. 
        You will see the same dialog creation interface as before, but clicking ~Save~ will now modify your existing question.</sys:String>

    <sys:String x:Key="Controller_QuickTips3_Title">What else can I do?</sys:String>
    <sys:String x:Key="Controller_QuickTips3_Description_formatted">When editing a question, click the ~Advanced~ dropdown to see more options.</sys:String>

    <sys:String x:Key="Controller_QuickTips4_Title">What order do the questions play in?</sys:String>
    <sys:String x:Key="Controller_QuickTips4_Description_formatted">The questions will play in the same order as you see them in the list.
        You can move the questions around by clicking on the ~up~ or ~down arrow~.</sys:String>

    <sys:String x:Key="Controller_Ordering_ErrorTitle">Can't move this question</sys:String>
    <sys:String x:Key="Controller_Ordering_ErrorTop">It is already at the top!</sys:String>
    <sys:String x:Key="Controller_Ordering_ErrorBottom">It is already at the bottom!</sys:String>
    
    <!-- Question creation and editing dialog -->
    <sys:String x:Key="QuestEdit_Create_Title">Create a new question</sys:String>
    <sys:String x:Key="QuestEdit_Edit_Title">Edit an existing question</sys:String>
